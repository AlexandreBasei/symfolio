    <title>Symfolio - Profil</title>
</head>
<body>
    <header>
        <nav>

            <a href="{{ url('projets') }}" class="home"><lord-icon
                src="https://cdn.lordicon.com/slduhdil.json"
                trigger="hover"
                colors="primary:#f5f5f5"
                colors="primary:#121331"
                state="hover-2"
                style="width:30px;height:30px">
            </lord-icon></a>
    
            <ul id="menu_deroulant">
                <li><a href="{{ url('app_login') }}" class="arrow"><lord-icon
                    src="https://cdn.lordicon.com/jxwksgwv.json"
                    trigger="hover"
                    colors="primary:#f5f5f5"
                    state="hover-3"
                    target=".arrow"
                    style="width:25px;height:25px">
                </lord-icon>Se connecter</a></li>
                <li><a href="{{ url('profil') }}" class="page"><lord-icon
                    src="https://cdn.lordicon.com/ogkplaef.json"
                    trigger="hover"
                    colors="primary:#f5f5f5"
                    target=".page"
                    style="width:25px;height:25px">
                </lord-icon>Mon portfolio</a></li>
                <li><a href="{{ url('projets') }}" class="book"><lord-icon
                    src="https://cdn.lordicon.com/qvbrkejx.json"
                    trigger="morph"
                    colors="primary:#f5f5f5"
                    target=".book"
                    style="width:25px;height:25px">
                </lord-icon>Fil d'actualité</a></li>
            </ul>
        
            <div class="menu_burger" id="menu_burger"></div>
        </nav>
    </header>
    <main ng-app="myApp">
        <h1>Espace Administrateur</h1>

        <section ng-controller="myCtrl">
            <button class="bouton" ng-click="showDiv = !showDiv">Ajouter un AC</button>
            <div ng-show="showDiv">
                <form ng-submit="envoyerAC()">
                    <label>Nom :</label>
                    <input type="text" name="nom" ng-model="nom">
                    <br>
                    <label>Compétence :</label>
                    <select name="competence" ng-model="competence">
                        <option value='concevoir'>Concevoir</option>
                        <option value='comprendre'>Comprendre</option>
                        <option value='exprimer'>Exprimer</option>
                        <option value='developper'>Développer</option>
                        <option value='entreprendre'>Entreprendre</option>
                    </select>
                    <br>
                    <label>Niveau :</label>
                    <select name="niveau" ng-model="niveau">
                        <option value='1'>1</option>
                        <option value='2'>2</option>
                        <option value='3'>3</option>
                    </select>
                    <br>
                    <button type="submit">Ajouter</button>
                </form>
            </div>
            {# <div ng-show="showDiv2">
                {{ form_start(ac2Form) }}
                {{ form_widget(ac2Form.id) }}

                    <button type="submit" class="btn">Supprimer</button>
                {{ form_end(ac2Form) }}
            </div> #}
        </section>

        <section ng-controller="myCtrl">
            <button id="supprimer" class="bouton" ng-click="showDiv2 = !showDiv2">Supprimer un AC</button>
            <div ng-show="showDiv2">
                    <form ng-submit='supprAC()'>
                        <label>Nom de l'AC :</label>
                        <select name='id' ng-model='id'>
                            {% for ac in acs %}
                                <option value='{{ ac.id }}'>{{ ac.nom }}</option>
                            {% endfor %}
                        </select>
                        <br>
                    <button type="submit">Supprimer</button>
                </form>
            </div>
        </section>

        <section ng-controller="myCtrl">
            <button class="bouton" ng-click="showDiv3 = !showDiv3">Ajouter un IUT</button>
            <div ng-show="showDiv3">
                    <form ng-submit='envoyerIut()'>
                    <label>Nom :</label>
                    <input type="text" name="nom" ng-model="nom">
                    <br>
                    <button type="submit">Ajouter</button>
                </form>
            </div>
        </section>

        <section ng-controller="myCtrl">
            <button id="supprimer" class="bouton" ng-click="showDiv4 = !showDiv4">Supprimer un IUT</button>
            <div ng-show="showDiv4">
                    <form ng-submit='supprIut()'>
                        <label>Nom de l'IUT :</label>
                        <select name='id' ng-model='id'>
                            {% for iut in iuts %}
                                <option value='{{ iut.id }}'>{{ iut.nom }}</option>
                            {% endfor %}
                        </select>
                        <br>
                    <button type="submit">Supprimer</button>
                </form>
            </div>
        </section>

    </main>

    <footer><span>Footer</span></footer>

</body>
</html>