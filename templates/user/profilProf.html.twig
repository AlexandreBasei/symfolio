<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Symfolio - Profil</title>
</head>
<body>
    {% for user in users %}
        <h1>{{ user.email }}</h1>
        <h2>{{ user.iut }}<h2>
        <h2>Niveau {{ user.niveau }}</h2>
        <img src={{ asset(user.photo) }} alt="Photo de profil">
        <p>{{ user.description }}</p>
    {% endfor %}

    {% if monProfil %}
        <h2>Vos commentaires</h2>
        {% for note in notes %}

            <h3>{{ note.nom }}</h3>
        {% endfor %}
    {% else %}
        <h2>Projets</h2>
        {% for projet in projets %}

            <h3>{{ projet.nom }}</h3>
            <h4>Date de cr√©ation du projet {{ projet.datepubli |date('d-m-Y') }}</h4>
            <img src={{ asset(projet.image) }} alt="Image du projet">
            <p>{{ tag }}</p>
            <p>{{ projet.description }}</p>
        {% endfor %}
        
        {{ form_start(noteForm) }}
            {{ form_widget(noteForm) }}

            <button type="submit" class="btn">Noter</button>
        {{ form_end(noteForm) }}
    {% endif %}
</body>
</html>