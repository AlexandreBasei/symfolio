<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src={{ asset('js/angular.min.js') }}></script>
    <script src={{ asset('js/app.js') }}></script>
    <title>Symfolio - Profil</title>
</head>
<body>
    {% if monProfil %}
        {% for user in users %}
            <h1>{{ user.email }}</h1>
            <h2>{{ user.iut }}<h2>
            <img src={{ asset(user.photo) }} alt="Photo de profil">
            <p>{{ user.description }}</p>
        {% endfor %}

        <h2>Vos commentaires</h2>
        <ul>
        {% for user in users %}
            {% for note in notes %}
                    {% if note.idUser.id == user.id %}
                        {% for projet in projets %}
                            <li>À {{ projet.idUser.email }} : {{note.commentaire}}, {{ note.note }}/20</li>
                        {% endfor %}
                    {% endif %}
            {% endfor %}
        {% endfor %}
        </ul>
    {% else %}
        {% for user in users %}
            <h1>{{ user.email }}</h1>
            <h2>{{ user.iut }}<h2>
            <h2>Niveau {{ user.niveau }}</h2>
            <img src={{ asset(user.photo) }} alt="Photo de profil">
            <p>{{ user.description }}</p>
        {% endfor %}

        {{ form_start(noteForm) }}
            {{ form_widget(noteForm) }}

            <button type="submit" class="btn">Noter</button>
        {{ form_end(noteForm) }}

        <h2>Projets</h2>
        {% for projet in projets %}
                <h3>{{ projet.nom }}</h3>
                <h4>Date de création du projet {{ projet.datepubli |date('d-m-Y') }}</h4>
                <img src={{ asset(projet.image) }} alt="Image du projet">
                <p>Tags : {{ tag }}</p>
                <p>{{ projet.description }}</p>
                <h3>Commentaires</h3>
                    <ul>
                        {% for note in notes %}
                            {% if note.idProjet.id == projet.id %}
                            
                                <li>{{ note.idUser.email }} : {{note.commentaire}}, {{ note.note }}/20
                                
                                {% for user in users %}
                                     {% if id0 == note.idUser.id %} {#Afficher un bouton supprimer à côté des commentaires écrits par l'utilisateur connecté #}
                                     
                                            <button><a href="{{ url('delete_comment', {'idNote': note.id, 'idUser': note.idUser.id, 'idPage': id}) }}">Supprimer</a></button>

                                    {% endif %}
                                {% endfor %}

                                </li>
                        
                            {% endif %}
                            
                        {% endfor %}
                    </ul>
        {% endfor %}
    {% endif %}
</body>
</html>