{% block body %}
 
    <h2 class="h3 mb-3 font-weight-normal">S'inscrire</h2>
    <div class="form">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email)}}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.iut) }}
        {{ form_row(registrationForm.niveau) }}
        {{ form_row(registrationForm.photo) }}
        {{ form_row(registrationForm.description) }}
        <div ng-app="">
        {{ form_row(registrationForm.agreeTerms, { 'attr': {'ng-model': 'isChecked'} }) }}

        <div class="center-btn">
        <button type="submit" class="btn" ng-disabled="!isChecked" ng-class="{'disabled': !isChecked}">S'inscrire</button>
        </div>
        </div>
    {{ form_end(registrationForm) }}
